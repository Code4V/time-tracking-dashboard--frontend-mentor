@import '../abstract/colors'
@import '../abstract/sizes'

.profile
  grid-row 1 / 3
  border-radius 1rem
  overflow hidden

  &__name 
  &__buttons
    padding-inline defaultPadding
    padding-block-start defaultPadding
    position relative

  &__name
    height 62%
    background-color blue
    border-radius @border-radius
    z-index 9

  &__buttons
    transform translateY(-1rem)
    margin-block-start auto
    background-color darkblue
    z-index -1
    height 40%

  &__time-changer
    display block
    // height 25px