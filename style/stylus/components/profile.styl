@import '../abstract/colors'
@import '../abstract/sizes'

.profile
  grid-row 1 / 3
  border-radius .8rem
  overflow hidden

  &__name 
  &__buttons
    padding-inline defaultPadding
    position relative

  &__image
    height 78px
    border 3px solid white
    border-radius 100svh
    transform translateX(-5px)


  &__name
    padding-block-start defaultPadding
    height 62%
    background-color blue
    border-radius @border-radius
    z-index 9

    &-sub
      font-size .85rem
      color paleblue
      margin-block-start 2.125rem

    &-main
      display block
      font-weight 300
      font-size 3.5ch
      line-height 2.7rem
      margin-block-start .25rem


  &__buttons
    display flex
    transform translateY(-1rem)
    background-color darkblue
    justify-content space-between
    padding-block-start 2.75rem
    

    @media screen and (min-width: 1440px)
      display block
      height 39%


  &__time-changer
    color desaturatedblue
    cursor auto
    pointer-events auto !important
    transition 350ms cubic-bezier(.14,1.08,.83,.61) color
    // margin-block-end 1rem

    &--active
      color white

    &:hover
      color paleblue

    @media screen and (min-width: 1440px)
      display block
      
    



  &__time-changer:not(:first-child)

    @media screen and (min-width: 1440px)
      margin-block-start 1.25rem