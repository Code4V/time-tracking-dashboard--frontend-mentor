@import '../abstract/colors'
@import '../abstract/sizes'

.profile
  grid-row 1 / 3
  border-radius .8rem
  overflow hidden
  max-height 200px

  @media screen and (min-width 1440px)
    max-height none

  &__name 
  &__buttons
    padding-inline defaultPadding
    position relative

  &__image
    max-height 64px
    border 2.5px solid white
    border-radius 100svh
    transform translateX(-5px)
    margin-inline-end 1rem
    display inline-block

      @media screen and (min-width 1440px)
        border 3px solid white
        height 78px
        margin-inline-end 0
        display inline

  &__name
    display flex
    align-items center
    background-color blue
    border-radius @border-radius
    z-index 9
    min-height 135px
    

    @media screen and (min-width 1440px)
      display: block
      padding-block-start defaultPadding
      padding-block-end auto
      height 62%

    &-sub
      font-size .85rem
      color paleblue

      @media screen and (min-width 1440px)
        margin-block-start 2.125rem

    &-main
      display block
      font-weight 300
      font-size 2.5ch
      margin-block-start .5rem

      @media screen and (min-width 1440px)
        line-height 2.7rem
        margin-block-start .25rem
        font-size 3.5ch

  &__buttons
    display flex
    background-color darkblue
    justify-content space-between
    transform translateY(-1rem)
    min-height 85px
    padding-block-start .5rem

    @media screen and (min-width: 1440px)
      height 38%
      padding-block-start 2.75rem
      display block


  &__time-changer
    color desaturatedblue
    cursor auto
    pointer-events auto !important
    transition 350ms cubic-bezier(.14,1.08,.83,.61) color
    // margin-block-end 1rem

    &--active
      color white

    &:hover
      color paleblue

    @media screen and (min-width: 1440px)
      display block
      
    



  &__time-changer:not(:first-child)

    @media screen and (min-width: 1440px)
      margin-block-start 1.25rem