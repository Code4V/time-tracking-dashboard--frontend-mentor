@import '../abstract/colors'
@import '../abstract/sizes'

.profile
  grid-row 1 / 3
  border-radius .8rem
  overflow hidden

  &__name 
  &__buttons
    padding-inline defaultPadding
    position relative

  &__image
    height 78px
    border 3px solid white
    border-radius 100svh
    transform translateX(-5px)


  &__name
    padding-block-start defaultPadding
    height 62%
    background-color blue
    border-radius @border-radius
    z-index 9

    &-sub
      font-size .85rem
      color paleblue
      margin-block-start 2.125rem

    &-main
      display block
      font-weight 300
      font-size 3.5ch
      line-height 2.7rem
      margin-block-start .25rem


  &__buttons
    transform translateY(-1rem)
    // margin-block-start auto
    background-color darkblue
    // z-index -1
    height 39%
    padding-block-start 2.75rem


  &__time-changer
    display block
    color desaturatedblue
    cursor auto
    pointer-events auto !important
    transition 350ms cubic-bezier(.14,1.08,.83,.61) color
    // margin-block-end 1rem

    &--active
      color white

    &:hover
      color paleblue



  &__time-changer:not(:first-child)
    margin-block-start 1.25rem
    
